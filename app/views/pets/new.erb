<h1>Create a new Pet</h1>

<form method='POST' action='/pets'>
  Name: <input type='text' name='pet[name]' value='pet_name' id='pet_name'>

  <br>
  <label> Choose an exisiting owner </label>
  <%Owner.all.each do |owner|%>
    <input type='checkbox' name='pet[owner_ids][]' id='<%=owner.id%>' value='<%=owner.id%>'>
    <%=owner.name%></input>
  <%end%>

  <label> and/or create a new owner</label>
  Name: <input type='text' name='owner[name]' id='owner_name'><br>
  <input type='submit' name='Create Pet' id='Create Pet'>
</form>
